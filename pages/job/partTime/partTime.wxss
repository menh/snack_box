page {
  width: 100%;
  height: 100%;
  
  background-color: #f8f8f8
}
.page{
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}
.page-section{
  margin-top: 20rpx;
}

.page-section-item{
  width: 740rpx;
  height: 140rpx;
  background-color: white;
  border-radius: 8rpx;
  line-height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: auto;
  margin-right: auto;
}

.page-section-item-left{
  width: 400rpx;
  height: 120rpx;
  line-height: 120rpx;
  margin-top: 10rpx;
  padding-left: 40rpx;
}
.page-section-item-left-up{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  align-content: center;
  font-weight: bold;
  font-size: 35rpx;
}
.page-section-item-left-down{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  align-content: center;
  font-size: 28rpx;
}

.page-section-item-right{
  width: 340rpx;
  height: 120rpx;
  padding-right: 40rpx;
  line-height: 120rpx;
  margin-top: 10rpx;
  color: red;
  text-align: right;
  font-size: 30rpx;
  font-weight: bold;
}

.page-title{
  width: 100%;
  color:#666666;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.page-section-call{
  width: 100%;
  height: 60rpx;
  color:#666666;
  font-size: 28rpx;
  text-align: center;
  margin-top: 50rpx;
}

.page-text{
  color: grey;
  font-size: 25rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
}
/* pages/openBox/openBox.wxss */
page{
  height:100%;
}

.openBox{
  height: 100%;
  width: 100%;
  background-color: #8FBFF5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.openBox-box{
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 280rpx;
}

.openBox-input-label{
  color: white;
  margin-left: auto;
  margin-right: auto;
  font-size: 32rpx;
}

.openBox-input{
  width: 320rpx;
  height: 130rpx;
  line-height: 130rpx;
  background-color: white;
  border-radius: 15rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 6rpx;
  font-size: 60rpx;
  color: blue;
}

.openBox-submit{
  color: blue;
  background-color: white;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 40rpx;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  border-radius: 10rpx;
}
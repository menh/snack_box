/* pages/box/box.wxss */
page{
  height:100%;
}

.box{
  width: 100%;
  height: 100%;
  background-color: #F4F4F4;
  padding-top: 10rpx;
}

.box-category{
  width: 155rpx;
  height: 50rpx;
  margin: 15rpx;
  background-color: #267BD9;
  border-radius: 10rpx;
  color: white;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
}

.box-snack{
  width: 720rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 5rpx;
  line-height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}

.box-snack-img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 15rpx;
}

.box-snack-property{
  width: 300rpx;
  height: 80rpx;
  margin-left: 25rpx;
  line-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
}
.box-snack-name{
  margin-top: 7rpx;
  margin-bottom: 5rpx;
  color: #585858;
  font-size: 32rpx;
}

.box-snack-price{
  margin-top: 7rpx;
  color: #999999;
  font-size: 26rpx;
}

.box-snack-buy{
  width: 145rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin-right: 25rpx;
  margin-left: auto;
  font-size: 35rpx;
  text-align: center;
  font-weight: 300;
}

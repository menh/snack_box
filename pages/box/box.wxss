/* pages/box/box.wxss */
page{
  height: 100%;
}

.home {
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
  display: flex;
}

.left{
  width: 160rpx;
  height: 100%;
  position: fixed;
}

.leftColumn{
  height: 100%;
  padding-top: 20rpx;
  background-color: #8FBFF5;
  flex-direction: row;
}

.left-category{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  margin-bottom: 20rpx;
  color: white;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}

.leftColumn-operat{
  width: 140rpx;
  height: 59.5rpx;
  margin-top: 30rpx;
  margin-left: 10rpx;
}

.left-category-choose{
  width: 100%;
  height: 110rpx;
  background-color: white;
  line-height: 110rpx;
  margin-bottom: 20rpx;
  color: #8FBFF5;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}

.box {
  width: 590rpx;
  height: 100%;
  margin-left: 160rpx;
  background-color: #f4f4f4;
  margin-top: 10rpx;
}

.box-category {
  width: 155rpx;
  height: 50rpx;
  margin: 15rpx;
  background-color: #267bd9;
  border-radius: 10rpx;
  color: white;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
}

.box-snack {
  width: 560rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 5rpx;
  line-height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}

.box-snack-img {
  width: 100rpx;
  height: 100rpx;
  margin-left: 15rpx;
}

.box-snack-property {
  width: 245rpx;
  height: 80rpx;
  margin-left: 20rpx;
  line-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.box-snack-name {
  margin-top: 7rpx;
  margin-bottom: 8rpx;
  color: #585858;
  font-size: 27rpx;
}

.box-snack-price {
  /* margin-top: 10rpx; */
  color: #999;
  font-size: 27rpx;
}

.box-snack-buy {
  width: 145rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin-right: 25rpx;
  margin-left: auto;
  font-size: 35rpx;
  text-align: center;
  font-weight: 300;
}

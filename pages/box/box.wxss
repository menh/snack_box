/* pages/box/box.wxss */
page{
  height:100%;
}

.box{
  width: 100%;
  height: 100%;
  background-color: darkgrey;
  padding-top: 10rpx;
}

.box-category{
  width: 150rpx;
  background-color: yellowgreen;
  border-radius: 15rpx;
  padding-left:10rpx;
}

.box-snack{
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  margin-top: 5rpx;
}
.box-snack-img{
  width: 130rpx;
  height: 130rpx;
  margin-left: 10rpx;
}

.box-snack-property{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.box-snack-name{
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.box-snack-price{
  width: 200rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.box-snack-buy{
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 15rpx;
  margin-left:30%;
  color: white;
  background-color: burlywood
}
